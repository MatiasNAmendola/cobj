local num_of_tests_run    = 0
local num_of_tests_failed = 0
local no_plan             = True

local proclaim = func(cond, desc)
    num_of_tests_run += 1
    if cond
        print("ok " + str(num_of_tests_run) + " - " + desc)
    else
        print("not ")
    end
end

